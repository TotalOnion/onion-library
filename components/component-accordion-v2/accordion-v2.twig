{# Do not edit this file outside of the component library as your changes will be lost with future updates. #}
{% set backgroundColour = '--background-colour: ' ~ fields.background_colour ~ ';' %}
{% set textColour = '--text-colour: ' ~ fields.text_colour ~ ';' %}
{% set iconBackgroundColour = '--icon-background-colour: ' ~ fields.icon_background_colour ~ ';' %}
{% set accordionTextPaddingTop = '--accordion-text-padding-top: ' ~ fields.accordion_text_padding_top ~ ';' %}
{% set ImageIconSize = '--image-icon-size: ' ~ fields.image_icon_size ~ ';' %}
{% set ImageIconRotationDeg = '--image-icon-rotation-deg: ' ~ fields.image_icon_rotation_deg ~ 'deg;' %}
{% set enableCustomIcon = fields.enable_custom_icon %}
{% set imageIcon = get_image(fields.image_icon) %}
{% set sectionStyles =  backgroundColour ~ textColour ~ iconBackgroundColour ~ iconHorizontalAlign ~ accordionTextPaddingTop ~ ImageIconSize ~ ImageIconRotationDeg %}

<style>
	.{{blockClassName}}__accordion-v2.{{block.id}}{
		{{sectionStyles}}
	}
</style>
<div {{block.anchor ? "id=" ~ block.anchor : ''}} class="{{ blockClassName }}__accordion-v2 {{block.id}}">
	<div class="{{ blockClassName }}__accordion-wrapper">
		<div class="{{ blockClassName }}__accordion-content">
			<h3 class="{{ blockClassName }}__accordion-question-wrapper">
				<button class="{{ blockClassName }}__accordion-question {{ fields.title_element_style | ru }} {{ blockClassName }}__accordion-question--{{ fields.icon_horizontal_align|ru }} ">{{ fields.accordion_title }}
					{% if enableCustomIcon %}
						<div class="{{ blockClassName }}__accordion-image-wrapper">
							<img class="{{ blockClassName }}__accordion-image-icon" src="{{imageIcon.src}}" alt="{{imageIcon.alt}}" width="{{imageIcon.width}}" height="{{imageIcon.height}}">
						</div>
					{% else %}
						<div class="{{ blockClassName }}__accordion-icon">
							<div class="{{ blockClassName }}__accordion-animation"></div>
						</div>
					{% endif %}
					<div class="{{ blockClassName }}__accordion-answer-wrapper" aria-hidden="true">
						{{ fields.accordion_text }}
					</div>
				</button>
			</h3>
		</div>
	</div>
</div>
