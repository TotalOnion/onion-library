{# Do not edit this file outside of the component library as your changes will be lost with future updates. #}
{% if fields.enable_text_shadow %}
	{% set textShadowClass = blockClassName|default('default-class') ~ "--text-shadow" %}
	{% set textShadowStyle = "--text-shadow-offset-x:" ~ (fields.text_shadow_horizontal_offset|default(0)) ~ "; --text-shadow-offset-y: " ~ (fields.text_shadow_vertical_offset|default(0)) ~ "; --text-shadow-blur: " ~ (fields.text_shadow_blur|default(0)) ~ "; --text-shadow-colour: " ~ (fields.text_shadow_colour|default("#000000")) ~ ";" %}
{% endif %}

{% if fields.enable_wysiwyg_decoration %}
	{% set wysiwygDecorationStyle = fields.wysiwyg_decoration_style|ru %}
{% endif %}

{% if fields.mobile_default_text_transform %}
	{% set defaultTextTransformMobile = '--default-text-transform-mobile: ' ~  fields.mobile_default_text_transform|ru ~ ';' %}
{% endif %}
{% if fields.desktop_default_text_transform %}
	{% set defaultTextTransformDesktop = '--default-text-transform-desktop: ' ~  fields.desktop_default_text_transform|ru ~ ';' %}
{% endif %}

{% if fields.mobile_default_text_align %}
	{% set defaultTextAlignMobile = '--default-text-align-mobile: ' ~  fields.mobile_default_text_align|ru ~ ';' %}
{% endif %}
{% if fields.desktop_default_text_align %}
	{% set defaultTextAlignDesktop = '--default-text-align-desktop: ' ~  fields.desktop_default_text_align|ru ~ ';' %}
{% endif %}

{% if fields.mobile_default_font_weight %}
	{% set defaultFontWeightMobile = '--default-font-weight-mobile: ' ~  fields.mobile_default_font_weight|ru ~ ';' %}
{% endif %}
{% if fields.desktop_default_font_weight %}
	{% set defaultFontWeightDesktop = '--default-font-weight-desktop: ' ~  fields.desktop_default_font_weight|ru ~ ';' %}
{% endif %}

{% if fields.mobile_default_font_style %}
	{% set defaultFontStyleMobile = '--default-font-style-mobile: ' ~ fields.mobile_default_font_style|ru ~ ';' %}
{% endif %}
{% if fields.desktop_default_font_style %}
	{% set defaultFontStyleDesktop = '--default-font-style-desktop: ' ~ fields.desktop_default_font_style|ru ~ ';' %}
{% endif %}

{% if fields.desktop_default_text_colour %}
	{% set defaultTextColourDesktop = '--default-text-colour-desktop: ' ~ fields.desktop_default_text_colour|ru ~ ';' %}
{% endif %}
{% if fields.mobile_default_text_colour %}
	{% set defaultTextColourMobile = '--default-text-colour-mobile: ' ~ fields.mobile_default_text_colour|ru ~ ';' %}
{% endif %}

{% if fields.enable_text_outline %}
	{% set textStrokeWidth = '--text-stroke-width: ' ~ fields.text_outline_width ~ ';' %}
	{% set textStrokeColour = '--text-stroke-colour: ' ~ fields.text_outline_colour ~ ';' %}
{% endif %}

{% set wysiwygMaxWidth = '--wysiwyg-max-width: ' ~ fields.wysiwyg_max_width ~ '%' ~ ';' %}
{% set wysiwygMaxWidthMobile = '--wysiwyg-max-width-mobile: ' ~ fields.wysiwyg_max_width_mobile ~ '%' ~ ';' %}

{% set tooltipBckgrndColour = '--content-tooltip-bckgrnd-colour: ' ~ fields.content_tooltip_settings.content_tooltip_background_colour ~ ';' %}
{% set tooltipFontColour = '--content-tooltip-font-colour: ' ~ fields.content_tooltip_settings.content_tooltip_font_colour ~ ';' %}
{% set tooltipTextAlign = '--content-tooltip-text-align: ' ~ fields.content_tooltip_settings.content_tooltip_text_align|ru ~ ';' %}
{% set tooltipBorderRadius = '--content-tooltip-border-radius: ' ~ fields.content_tooltip_settings.content_tooltip_border_radius ~ fields.content_tooltip_settings.content_tooltip_border_radius_unit|ru ~ ';' %}

{% set widgetStyles = textShadowStyle ~ defaultTextColourDesktop ~ defaultTextColourMobile ~ textStrokeWidth ~ textStrokeColour ~ wysiwygHorizPaddingMobile ~ wysiwygHorizPaddingDesktop ~ wysiwygMaxWidth ~ wysiwygMaxWidthMobile ~ defaultTextTransformDesktop ~ defaultTextTransformMobile ~ defaultFontWeightMobile ~ defaultFontWeightDesktop ~ defaultFontStyleMobile ~ defaultFontStyleDesktop ~ defaultTextAlignMobile ~ defaultTextAlignDesktop ~ tooltipBckgrndColour ~ tooltipFontColour ~ tooltipTextAlign ~ tooltipBorderRadius %}

{% if fields.enable_post_author_info_content %}
	<div class="{{blockClassName|default('default-class')}}__content-container {{textShadowClass}} {{blockClassName|default('default-class')}}__{{wysiwygDecorationStyle}} standard-content-box-wysiwyg-editor {{blockClassName|default('default-class')}}__post-author-info__container" style="{{widgetStyles}}">
		<div class="{{blockClassName|default('default-class')}}__post-author-info__wrapper">
			{% if fields.post_author_icon_image.url is not empty %}
				{% set postAuthorIconPosition = '--post-author-icon-order: ' ~ (fields.post_author_icon_position|ru == 'right' ? 1 : 0) ~ ';' %}
				{% set postAuthorIconBckgrndColour = '--post-author-icon-bckgrnd-colour: ' ~ fields.post_author_icon_background_colour ~ ';' %}
				{% set postAuthorStyles = postAuthorIconPosition ~ postAuthorIconBckgrndColour %}
				<div class="{{blockClassName|default('default-class')}}__post-author-info--icon" style="{{postAuthorStyles}}">
					<img src="{{fields.post_author_icon_image.url}}" alt="{{fields.post_author_icon_image.alt}}">
				</div>
			{% endif %}
			{% if fields.post_author_info is not empty %}
				<{{fields.element_type|ru}} class="{{fields.typographic_style|ru}} {{blockClassName|default('default-class')}}__post-author-info--content">
					{% set authorInfo = fields.post_author_info|replace({'<p>': '', '</p>': ''}) %}
					{{authorInfo|striptags('<br>, <a>, <em>, <i>, <span>, <strong>, <div>, <p>')|raw}}
				</{{fields.element_type|ru}}>
			{% endif %}
		</div>
	</div>
{% endif %}