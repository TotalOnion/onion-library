{# Do not edit this file outside of the component library as your changes will be lost with future updates. #}
{% if fields.form_display_selector %}
	{% set displaySelector = '__modal' %}
	{% else %}
	{% set displaySelector = '' %}
{% endif %}
	
<div class="form-container{{displaySelector}}">
	<div class="form-container{{displaySelector}}-inner">
		{{function('do_shortcode', '[cdbform id=' ~ fields.form ~ ']')}}
		{% if fields.form_display_selector %}
			<button class="form-container__modal-close"></button>
		{% endif %}
	</div>
</div>
{% if fields.form_display_selector %}
	{% if fields.cta_style|ru matches '/^\\d+$/' %}
		{% set ctaData = attribute(cta_styles['theme_cta_styles'], cta.cta_style|ru - 1) %}
		{% set enableCtaAnimation = ctaData.cta_settings.enable_cta_animation %}
		{% set enableCtaIcon = ctaData.cta_settings.include_cta_icon %}
	{% endif %}
	<button class="form-container__modal-open cmpl-cta-style-{{fields.cta_style|ru}}">{{fields.cta_text}}</button>
{% endif %}