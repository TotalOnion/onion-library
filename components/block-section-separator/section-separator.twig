{# Do not edit this file outside of the component library as your changes will be lost with future updates. #}
{% set blockClassName = "section-separator" %}
{% set displaytype = 'grid' %}

{% set classNameEntryPoint = include('entry-points/entry-point-classes.twig', { fields, block }, with_context = false) %}
{% set htmlEntryPoint = include('entry-points/entry-point-html.twig', { fields, block, blockClassName, options, environment, is_preview, nav_menus }, with_context = false) %}
{% set dataAttributeEntryPoint = include('entry-points/entry-point-data-attribute.twig', { fields, block }, with_context = false) %}
{% set styleEntryPoint = include('entry-points/entry-point-style.twig', { fields, block, displaytype, is_preview }, with_context = false) %}
{% set previewEntryPoint = include('entry-points/entry-point-preview-info.twig', { fields, block, displaytype, is_preview }, with_context = false) %}


{% set separatorImage = get_image(fields.separator_image) %}
{% set secondaryImage = get_image(fields.secondary_image) %}

{% set showOnDesktop = '--display-desktop: ' ~ (fields.show_on_desktop ? 'grid' : 'none') ~ ';' %}
{% set showOnPortrait = '--display-portrait: ' ~ (fields.show_on_tablet_portrait ? 'grid' : 'none') ~ ';' %}
{% set showOnMobile = '--display-mobile: ' ~ (fields.show_on_mobile ? 'grid' : 'none') ~  ';' %}
{% set horizontalPosition = '--horizontal-position: ' ~ fields.horizontal_position|ru ~ ';' %}
{% set horizontalOffset = '--horizontal-offset: ' ~ fields.horizontal_offset ~ '%;' %}
{% set verticalOffset = '--vertical-offset: ' ~ fields.vertical_offset ~ '%;' %}
{% set maxWidthDesktop = '--max-width-desktop: ' ~ fields.max_width_desktop ~ ';' %}
{% set maxWidthPortrait = '--max-width-portrait: ' ~ fields.max_width_portrait ~ ';' %}
{% set maxWidthMobile = '--max-width-mobile: ' ~ fields.max_width_mobile ~ ';' %}

{% set maxWidthVars = maxWidthDesktop ~ maxWidthPortrait ~ maxWidthMobile %}
{% set positionVars = horizontalPosition ~ horizontalOffset ~ verticalOffset %}
{% set sectionStyles = styleEntryPoint ~ background ~ sizeMultiplier ~ positionVars ~ maxWidthVars %}

{{previewEntryPoint}}
<style>
	.{{blockClassName}}.{{block.id}}{
		{{sectionStyles}}
	}
</style>

<section {{block.anchor ? "id=" ~ block.anchor : ''}} class="section-separator {{blockClassName}} {{block.className}} {{classNameEntryPoint}} lazy-fade {{block.id}}" {{dataAttributeEntryPoint}} data-jsload="false" data-assetkey="section-separator">
	{% if separatorImage is defined and separatorImage is not empty %}
		<img loading="lazy" class="section-separator__separator-image" src="{{ separatorImage.src }}" srcset="{{ separatorImage.srcset }}" width="{{ separatorImage.width }}" height="{{ separatorImage.height }}" alt="{{ separatorImage.alt }}"/>
	{% endif %}

	{% if secondaryImage is defined and secondaryImage is not empty %}
		<img loading="lazy" class="section-separator__secondary-image" src="{{ secondaryImage.src }}" srcset="{{ secondaryImage.srcset }}" width="{{ secondaryImage.width }}" height="{{ secondaryImage.height }}" alt="{{ secondaryImage.alt }}"/>
	{% endif %}

	{{htmlEntryPoint}}
</section>
