{% set currentTheme = 'theme-' ~ market_settings.default_theme|ru|default('1') %}

{% if post.enable_custom_theme_select and post.page_theme is not empty %}
	{% if post.page_theme|ru == 'default' %}
		{% if market_settings.default_theme %}
			{% set currentTheme = 'theme-' ~ market_settings.default_theme|ru %}
		{% else %}
			{% set currentTheme = 'theme-1' %}
		{% endif %}
	{% else %}
		{% set currentTheme = 'theme-' ~ post.page_theme|ru %}
	{% endif %}
{% endif %}
{{currentTheme}}
