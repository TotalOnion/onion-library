{% set blockClassName = 'spacer-v2' %}
{% set background = '--spacer-bg-colour: ' ~ fields.spacer_background|ru|default('') ~ ';'  %}
{% set sizeMultiplier = '--spacer-size-mult: ' ~ fields.spacer_size|ru|default('') ~ ';' %}
{% set sizeMultiplierPortrait = '--spacer-size-mult-portrait: ' ~ fields.size_portrait|ru|default('') ~ ';' %}
{% set sizeMultiplierMobile = '--spacer-size-mult-mobile: ' ~ fields.size_mobile|ru|default('') ~ ';' %}
{% set sectionStyles = background ~ sizeMultiplier ~ sizeMultiplierPortrait ~ sizeMultiplierMobile %}
<style>
	.{{blockClassName}}.{{block.id}}{
		{{sectionStyles}}
	}
</style>
<section {{block.anchor ? "id=" ~ block.anchor : ''}} class="{{blockClassName}} {{block.id}}" data-assetkey="spacer-v2"></section>
