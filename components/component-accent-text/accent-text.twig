{% if fields.accent_text_colour %}
	{% set accentTextColour = '--accent-text-colour: ' ~ fields.accent_text_colour ~ ';' %}
	{% set accentTextColourMobile = '--accent-text-colour-mobile: ' ~ fields.accent_text_colour_mobile|default(fields.accent_text_colour) ~ ';' %}
{% endif %}

{% set alignment = '--alignment: ' ~ fields.alignment|ru ~ ';' %}
{% set elementStyles = accentTextColour ~ accentTextColourMobile ~ alignment  %}

<div class="{{ blockClassName|default('accent-text') }}__accent-text accent-text" style="{{elementStyles}}">{{fields.text_content}}</div>
