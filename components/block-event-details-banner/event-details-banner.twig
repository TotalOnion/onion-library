									<rect width="24" height="24" fill="white"/>
								</clipPath>
							</defs>
						</svg>
						{{ fields.time }}
					</div>
				{% endif %}
				{% if fields.price %}
					<div class="event-details-banner__price">{{ fields.price }}</div>
				{% endif %}
				<div class="event-details-banner__button">
					{% for button in fields.button %}
						{% if button.enabled %}
							<a href="{{ button.link.url }}" class="event-details-banner__link">
								{{ button.link.title }}
								<svg width="11" height="13" viewbox="0 0 11 13" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M4.01062 0.72168L0 0.72168L6.01716 6.56978L0 12.4179H4.01062L10.0253 6.56978L4.01062 0.72168Z" fill="#FFFBF9"/>
								</svg>
							</a>
						{% endif %}
					{% endfor %}
				</div>
			</div>

		</div>
	</div>
	{{htmlEntryPoint}}</section>
