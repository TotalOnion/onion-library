{% set blockClassName = "event-details-banner" %}
{% set classNameEntryPoint = include('entry-points/entry-point-classes.twig', { fields, block }, with_context = false) %}
{% set htmlEntryPoint = include('entry-points/entry-point-html.twig', { fields, block, blockClassName, options, environment, is_preview, nav_menus }, with_context = false) %}
{% set dataAttributeEntryPoint = include('entry-points/entry-point-data-attribute.twig', { fields, block }, with_context = false) %}
{% set styleEntryPoint = include('entry-points/entry-point-style.twig', { fields, block, displaytype, is_preview }, with_context = false) %}
{% set previewEntryPoint = include('entry-points/entry-point-preview-info.twig', { fields, block, displaytype, is_preview }, with_context = false) %}


{% set fontColour = "--font-colour:" ~ fields.font_colour|ru|default('#000000') ~ ";" %}
{% set backgroundColour = '--background-colour: ' ~ fields.background_colour|ru|default('#ffffff') ~ ';' %}
{% set buttonBackgroundColour = '--button-background-colour: ' ~ fields.button_background_colour|ru|default('#ffffff') ~ ';' %}
{% set buttonTextColour = '--button-text-colour: ' ~ fields.button_text_colour|ru|default('#ffffff') ~ ';' %}
{% set sectionStyles = fontColour ~ backgroundColour ~ buttonBackgroundColour ~ buttonTextColour ~ styleEntryPoint %}

<section {{block.anchor ? "id=" ~ block.anchor : ''}} class="event-details-banner {{blockClassName}} {{block.className}} {{classNameEntryPoint}} lazy-fade {{block.id}}" {{dataAttributeEntryPoint}} style="{{sectionStyles}}" data-assetkey="event-details-banner">
	<div class="event-details-banner__holder">
		<div class="event-details-banner__image {% if fields.image_spacer %} event-details-banner__image--spacing {% endif %}" style="background-image: url({{ fields.image }})"></div>
		<div class="event-details-banner__content">
			{% if fields.title %}
				<h3 class="event-details-banner__title">{{ fields.title }}</h3>
			{% endif %}
			{% if fields.subtitle %}
				<h4 class="event-details-banner__subtitle">{{ fields.subtitle }}</h4>
			{% endif %}
			{{ fields.description }}
