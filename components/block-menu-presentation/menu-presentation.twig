{# Do not edit this file outside of the component library as your changes will be lost with future updates. #}
{% set blockClassName = "menu-presentation" %}
{% set classNameEntryPoint = include('entry-points/entry-point-classes.twig', { fields, block }, with_context = false) %}
{% set htmlEntryPoint = include('entry-points/entry-point-html.twig', { fields, block, blockClassName, options, environment, is_preview, nav_menus }, with_context = false) %}
{% set dataAttributeEntryPoint = include('entry-points/entry-point-data-attribute.twig', { fields, block }, with_context = false) %}
{% set styleEntryPoint = include('entry-points/entry-point-style.twig', { fields, block, displaytype, is_preview }, with_context = false) %}
{% set previewEntryPoint = include('entry-points/entry-point-preview-info.twig', { fields, block, displaytype, is_preview }, with_context = false) %}

{% set backgroundColour = '--background-colour: ' ~ fields.background_colour ~ ';' %}
{% set textColour = '--text-colour: ' ~ fields.text_colour ~ ';' %}
{% set sectionStyles =  styleEntryPoint ~ backgroundColour ~ textColour %}

<section {{block.anchor ? "id=" ~ block.anchor : ''}} class="menu-presentation {{blockClassName}} {{block.className}} {{classNameEntryPoint}} lazy-fade {{block.id}}" {{dataAttributeEntryPoint}} data-jsload="false" style="{{sectionStyles}}" data-assetkey="menu-presentation">
	{% if fields.enabled %}

		{% if fields.image is defined and fields.image is not empty %}
			{% set image = get_image(fields.image) %}
			<img class="menu-presentation__image" src="{{image.src}}" width="{{image.width}}" height="{{image.height}}" srcset="{{image.srcset}}" alt="{{image.alt}}">
		{% endif %}

		<div class="menu-presentation__holder menu-presentation--{{ fields.position }}">
			<h1>{{ fields.title }}</h1>

			{% for availability in fields.availability %}
				<p>{{ availability.date }}
					{{ availability.time }}</p>
			{% endfor %}

			{% for type in fields.type %}
				<div class="menu-presentation__type">
					{% if type.type %}
						<h2>{{ type.type }}</h2>
					{% endif %}

					{% for item in type.item %}
						<div class="menu-presentation__contents">
							<div class="menu-presentation__item">
								{% if item.title %}
									<h3>{{ item.title }}</h3>
								{% endif %}
								{% if item.description %}
									<p>{{ item.description }}</p>
								{% endif %}
							</div>
							<div class="menu-presentation__price">
								{% if item.price %}
									<p>{{ item.price }}
										{{ fields.currency }}
									</p>
								{% endif %}
							</div>
						</div>
					{% endfor %}
					{{ type.title }}
				</div>
			{% endfor %}
		</div>
	{% endif %}
	{{htmlEntryPoint}}
</section>
