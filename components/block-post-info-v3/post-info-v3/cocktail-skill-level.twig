{# Do not edit this file outside of the component library as your changes will be lost with future updates. #}
{% set gridLayoutElement = include('components/grid-layout-element.twig', { fields: field, block: block }, with_context = false) %}
{% set textStyle = include('components/text-style.twig', {field, post}) %}
{% set elementStyles = gridLayoutElement ~ textStyle %}

{% set cocktail_skill_level = post.meta('cocktail_skill_level') %}

{% set accentImage = '' %}
{% set globalImageSelectedIndex = field.select_global_image - 1 %}
{% if globalImageSelectedIndex >= 0 %}
	{% set globalImageSelectedImg = attribute(options.global_images, globalImageSelectedIndex) %}
	{% if globalImageSelectedImg.global_image is not empty %}
		{% set accentImage = get_image(globalImageSelectedImg.global_image) %}
	{% endif %}
{% endif %}
<style>
	.{{blockClassName}}__cocktail-skill-level.{{block.id}} {
		{{elementStyles}}
	}
</style>
<div class="{{blockClassName}}__cocktail-skill-level {{blockClassName}}__info-item {{block.id}}">
	{% if accentImage is not empty %}
		<img src="{{accentImage}}" class="post-info__global-image__image" alt="{{accentImageAlt}}" loading="lazy">
	{% endif %}
	<{{field.text_style.text_element_type|ru}} class="{{blockClassName}}__info-item {{field.text_style.typography_style|ru}}" style="{{elementStyles}}">
		Skill Level
		<span class="{{blockClassName}}__info-item-separator">:</span>
		<span class="{{blockClassName}}__info-item-value">{{cocktail_skill_level}}</span>
	</{{field.text_style.text_element_type|ru}}>
</div>
