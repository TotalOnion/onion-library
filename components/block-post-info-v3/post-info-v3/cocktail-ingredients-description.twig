{% set gridLayoutElement = include('components/grid-layout-element.twig', { fields: field, block: block }, with_context = false) %}
{% set textStyle = include('components/text-style.twig', {field, post}) %}
{% set elementStyles = gridLayoutElement ~ textStyle %}

{% set cocktail_ingredients_desc = post.meta('cocktail_ingredients_description') %}
<style>
	.{{blockClassName}}__cocktail-ingredients-description.{{block.id}} {
		{{elementStyles}}
	}
</style>
<{{field.text_style.text_element_type|ru}} class="{{blockClassName}}__cocktail-ingredients-description {{blockClassName}}__info-item {{field.text_style.typography_style|ru}} {{block.id}}">{{cocktail_ingredients_desc}}</{{field.text_style.text_element_type|ru}}>
