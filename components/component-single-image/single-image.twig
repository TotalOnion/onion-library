{% set image = get_image(fields.image|default(fields.desktop_image)) %}
{% set isSVG = check_file_type(image.id) == 'image/svg+xml' %}
{% set mainImageSrc = gt_image_mainsrc(image) %}
{% set srcset = isSVG ? '' : gt_image_srcset(image) %}

<img loading="lazy" data-pattern-post-info="post_image" class="{{ blockClassName|default('default-image') }}__image" sizes="{{imageSizes}}" src="{{ mainImageSrc }}" srcset="{{ srcset }}" width="{{ image.width }}" height="{{ image.height }}" alt="{{ image.alt }}" title="{{ image.title }}"/>
