{# Do not edit this file outside of the component library as your changes will be lost with future updates. #}
{% set blockClassName = "divider-v3" %}
{% set displaytype = 'grid' %}
{% set classNameEntryPoint = include('entry-points/entry-point-classes.twig', { fields, block }, with_context = false) %}
{% set htmlEntryPoint = include('entry-points/entry-point-html-v3.twig', { fields, block, blockClassName, options, environment, is_preview, nav_menus }, with_context = false) %}
{% set dataAttributeEntryPoint = include('entry-points/entry-point-data-attribute.twig', { fields, block }, with_context = false) %}
{% set styleEntryPoint = include('entry-points/entry-point-style.twig', { fields, block, displaytype, is_preview }, with_context = false) %}
{% set previewEntryPoint = include('entry-points/entry-point-preview-info.twig', { fields, block, displaytype, is_preview }, with_context = false) %}
{% set blockBgColour = '--divider-background-colour:' ~ fields.background_colour|ru ~ ';' %}
{% if fields.block_background_colour_type and fields.block_background_colour_type|ru != 'colour-picker' %}
	{% set blockBgColour = '--divider-background-colour:' ~ (fields.block_background_colour_type|ru) ~ ';' %}
{% endif %}
{% if fields.block_background_colour_type and fields.block_background_colour_type|ru == 'image' %}
	{% set backgroundImage = '--divider-background-image: url(' ~ get_image(fields.background_image).src ~ ');' %}
	{% set backgroundRepeat = '--divider-background-repeat: ' ~ fields.background_repeat|ru ~ ';' %}
	{% set backgroundPositionX = '--divider-background-position-x: ' ~ fields.background_position_horizontal|ru ~ ';' %}
	{% set backgroundPositionY = '--divider-background-position-y: ' ~ fields.background_position_vertical|ru ~ ';' %}
{% endif %}

{% set horizontalPosition = '--divider-horizontal-position:' ~ fields.horizontal_position|ru ~ ';' %}
{% set maxWidthDesktop = '--divider-max-width-desktop:' ~ fields.max_width_desktop ~ ';' %}
{% set maxWidthPortrait = '--divider-max-width-portrait:' ~ fields.max_width_portrait ~ ';' %}
{% set maxWidthMobile = '--divider-max-width-mobile:' ~ fields.max_width_mobile ~ ';' %}

{% set verticalPosition = '--divider-vertical-position:' ~ fields.vertical_position|ru ~ ';' %}
{% set maxHeightDesktop = '--divider-max-height-desktop:' ~ fields.max_height_desktop ~ ';' %}
{% set maxHeightPortrait = '--divider-max-height-portrait:' ~ fields.max_height_portrait ~ ';' %}
{% set maxHeightMobile = '--divider-max-height-mobile:' ~ fields.max_height_mobile ~ ';' %}

{% set orientation = fields.vertical_or_horizonal_divider ? 'vertical' : 'horizontal' %}


{% set height = '--divider-height:' ~ (fields.height ? fields.height ~ ';' : '100%;') %}
{% set width = '--divider-width:' ~ (fields.width ? fields.width ~ ';' : '100%;') %}

{% set sectionStyles =  styleEntryPoint ~ blockBgColour ~ backgroundPositionX ~ backgroundPositionY ~ backgroundImage ~ backgroundRepeat ~ height ~ width ~ horizontalPosition ~ maxWidthDesktop ~ maxWidthPortrait ~ maxWidthMobile ~ verticalPosition ~ maxHeightDesktop ~ maxHeightPortrait ~ maxHeightMobile %}
<style>
	.{{blockClassName}}.{{block.id}}{
		{{sectionStyles}}
	}
</style>
<section {{block.anchor ? "id=" ~ block.anchor : ''}} class="{{blockClassName}} {{classNameEntryPoint}} {{blockClassName}} {{block.className}} {{orientation}} lazy-fade {{block.id}}" {{dataAttributeEntryPoint}} data-jsload="false" data-assetkey="divider-v3">
	<div class="divider__line"></div>
	{{htmlEntryPoint}}
</section>
