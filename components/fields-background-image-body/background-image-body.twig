{% set backgroundImage = false %}
{% set bgImageName = false %}
{% if options.body_container_background_image %}
	{% set backgroundImage = options.body_container_background_image %}
	{% set bgImageName = 'body-container-background-image' %}
{% endif %}
{% if current_post.page_background_image %}
	{% set backgroundImage = current_post.page_background_image %}
	{% set bgImageName = 'body-container-background-image' %}
{% endif %}
{% if backgroundImage %}
	{% set imageFields = [] %}
	{% set imageFields = imageFields|merge({'enable_image' : true}) %}
	{% set imageFields = imageFields|merge({'desktop_image' : backgroundImage}) %}
	{{ include('components/responsive-image.twig', {fields : imageFields, block : block, blockClassName : bgImageName}, with_context = false) }}
{% endif %}
