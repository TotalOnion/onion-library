{# Do not edit this file outside of the component library as your changes will be lost with future updates. #}
{% set enableDays = fields.enable_days %}
{% set enableHours = fields.enable_hours %}
{% set textColour = '--text-colour: ' ~ fields.text_colour ~ ';' %}

{% set sectionStyles = textColour %}


<div {{block.anchor ? "id=" ~ block.anchor : ''}} class="{{ blockClassName }}__countdown countdowndate" data-count-down-date-time="{{ fields.date_time_pick }}" style="{{sectionStyles}}">
	{% if enableDays %}
		<div class="{{ blockClassName }}__countdown-days {{ fields.text_style|ru }}" id="days"></div>
	{% endif %}
	{% if enableHours %}
		<div class="{{ blockClassName }}__countdown-hours {{ fields.text_style|ru }}" id="hours"></div>
	{% endif %}
</div>
