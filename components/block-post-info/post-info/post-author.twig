{# Do not edit this file outside of the component library as your changes will be lost with future updates. #}
{% set gridLayoutElement = include('components/grid-layout-element.twig', { fields: field, post: post }, with_context = false) %}
{% if post.enable_text_shadow %}
	{% set textShadowClass = blockClassName|default('default-class') ~ "--text-shadow" %}
	{% set textShadowStyle = "--text-shadow-offset-x:" ~ (post.text_shadow_horizontal_offset|default(0)) ~ "; --text-shadow-offset-y: " ~ (post.text_shadow_vertical_offset|default(0)) ~ "; --text-shadow-blur: " ~ (post.text_shadow_blur|default(0)) ~ "; --text-shadow-colour: " ~ (post.text_shadow_colour|default("#000000")) ~ ";" %}
{% endif %}
{% if post.enable_wysiwyg_decoration %}
	{% set wysiwygDecorationStyle = post.wysiwyg_decoration_style|ru %}
{% endif %}
{% if post.mobile_default_text_transform %}
	{% set defaultTextTransformMobile = '--default-text-transform-mobile: ' ~  post.mobile_default_text_transform|ru ~ ';' %}
{% endif %}
{% if post.desktop_default_text_transform %}
	{% set defaultTextTransformDesktop = '--default-text-transform-desktop: ' ~  post.desktop_default_text_transform|ru ~ ';' %}
{% endif %}
{% if post.mobile_default_text_align %}
	{% set defaultTextAlignMobile = '--default-text-align-mobile: ' ~  post.mobile_default_text_align|ru ~ ';' %}
{% endif %}
{% if post.desktop_default_text_align %}
	{% set defaultTextAlignDesktop = '--default-text-align-desktop: ' ~  post.desktop_default_text_align|ru ~ ';' %}
{% endif %}
{% if post.mobile_default_font_weight %}
	{% set defaultFontWeightMobile = '--default-font-weight-mobile: ' ~  post.mobile_default_font_weight|ru ~ ';' %}
{% endif %}
{% if post.desktop_default_font_weight %}
	{% set defaultFontWeightDesktop = '--default-font-weight-desktop: ' ~  post.desktop_default_font_weight|ru ~ ';' %}
{% endif %}
{% if post.mobile_default_font_style %}
	{% set defaultFontStyleMobile = '--default-font-style-mobile: ' ~ post.mobile_default_font_style|ru ~ ';' %}
{% endif %}
{% if post.desktop_default_font_style %}
	{% set defaultFontStyleDesktop = '--default-font-style-desktop: ' ~ post.desktop_default_font_style|ru ~ ';' %}
{% endif %}
{% if post.desktop_default_text_colour %}
	{% set defaultTextColourDesktop = '--default-text-colour-desktop: ' ~ post.desktop_default_text_colour|ru ~ ';' %}
{% endif %}
{% if post.mobile_default_text_colour %}
	{% set defaultTextColourMobile = '--default-text-colour-mobile: ' ~ post.mobile_default_text_colour|ru ~ ';' %}
{% endif %}
{% if post.enable_text_outline %}
	{% set textStrokeWidth = '--text-stroke-width: ' ~ post.text_outline_width ~ ';' %}
	{% set textStrokeColour = '--text-stroke-colour: ' ~ post.text_outline_colour ~ ';' %}
{% endif %}
{% set wysiwygMaxWidth = '--wysiwyg-max-width: ' ~ post.wysiwyg_max_width ~ '%' ~ ';' %}
{% set wysiwygMaxWidthMobile = '--wysiwyg-max-width-mobile: ' ~ post.wysiwyg_max_width_mobile ~ '%' ~ ';' %}
{% set tooltipBckgrndColour = '--content-tooltip-bckgrnd-colour: ' ~ post.content_tooltip_settings.content_tooltip_background_colour ~ ';' %}
{% set tooltipFontColour = '--content-tooltip-font-colour: ' ~ post.content_tooltip_settings.content_tooltip_font_colour ~ ';' %}
{% set tooltipTextAlign = '--content-tooltip-text-align: ' ~ post.content_tooltip_settings.content_tooltip_text_align|ru ~ ';' %}
{% set tooltipBorderRadius = '--content-tooltip-border-radius: ' ~ post.content_tooltip_settings.content_tooltip_border_radius ~ post.content_tooltip_settings.content_tooltip_border_radius_unit|ru ~ ';' %}
{% set elementStyles = textShadowStyle ~ defaultTextColourDesktop ~ defaultTextColourMobile ~ textStrokeWidth ~ textStrokeColour ~ wysiwygHorizPaddingMobile ~ wysiwygHorizPaddingDesktop ~ wysiwygMaxWidth ~ wysiwygMaxWidthMobile ~ defaultTextTransformDesktop ~ defaultTextTransformMobile ~ defaultFontWeightMobile ~ defaultFontWeightDesktop ~ defaultFontStyleMobile ~ defaultFontStyleDesktop ~ defaultTextAlignMobile ~ defaultTextAlignDesktop ~ tooltipBckgrndColour ~ tooltipFontColour ~ tooltipTextAlign ~ tooltipBorderRadius ~ gridLayoutElement %}

{% if post.enable_post_author_info_content %}
	<style>
		.{{blockClassName}}__content-container.{{block.id}} {
			{{elementStyles}}
		}
	</style>
	<div class="{{blockClassName}}__content-container {{textShadowClass}} {{blockClassName}}__{{wysiwygDecorationStyle}} standard-content-box-wysiwyg-editor {{blockClassName}}__info-item {{blockClassName}}__post-author-info__container {{block.id}}">
		<div class="{{blockClassName}}__post-author-info__wrapper">
			{% if post.post_author_icon_image.url is not empty %}
				{% set postAuthorIconPosition = '--post-author-icon-order: ' ~ (post.post_author_icon_position|ru == 'right' ? 1 : 0) ~ ';' %}
				{% set postAuthorIconBckgrndColour = '--post-author-icon-bckgrnd-colour: ' ~ post.post_author_icon_background_colour ~ ';' %}
				{% set postAuthorStyles = postAuthorIconPosition ~ postAuthorIconBckgrndColour %}
				<div class="{{blockClassName}}__post-author-info--icon" style="{{postAuthorStyles}}">
					<img src="{{post.post_author_icon_image.url}}" alt="{{post.post_author_icon_image.alt}}">
				</div>
			{% endif %}
			{% if post.post_author_info is not empty %}
				<{{post.element_type|ru}} class="{{post.typographic_style|ru}} {{blockClassName}}__post-author-info--content">
					{% set authorInfo = post.post_author_info|replace({'<p>': '', '</p>': ''}) %}
					{{authorInfo|striptags('<br>, <a>, <em>, <i>, <span>, <strong>, <div>, <p>')|raw}}
				</{{post.element_type|ru}}>
			{% endif %}
		</div>
	</div>
{% endif %}
