<{{field.text_style.text_element_type|ru}} class="{{blockClassName}}__article-description {{blockClassName}}__info-item {{field.text_style.typography_style|ru}}" style="{{elementStyles}}">{{article_desc}}</{{field.text_style.text_element_type|ru}}>
