{% set gridLayoutElement = include('components/grid-layout-element.twig', { fields: field, block: block }, with_context = false) %}
{% set elementStyles = gridLayoutElement %}

{% set cocktail_recipe_instructions = post.meta('cocktail_recipe_instructions') %}

<div class="{{blockClassName}}__cocktail-recipe-instructions instructions-wrapper {{blockClassName}}__info-item" style="{{elementStyles}}">
	<div class="instructions-inner-wrap" style="--column-start: {{fields.grid_layout.grid_column_start}}; --column-span: {{fields.grid_layout.grid_column_span}}; --row-span: {{fields.grid_layout.grid_row_span}};">
		{% for instructions_grp in cocktail_recipe_instructions %}
			{% for instructions in instructions_grp %}
				<ol class="instructions-list-wrap">
					{% for instruction in instructions %}
						<li class="instruction-list">{{instruction.instruction}}</li>
					{% endfor %}
				</ol>
			{% endfor %}
		{% endfor %}
	</div>
</div>
